<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/common_bg"
        >
    <LinearLayout
            android:id="@+id/content_layout_llTitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/topbottomtitle"
            android:gravity="center"
            >
        <TextView
                android:id="@+id/content_layout_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About"
                android:textColor="@color/color_while"
                android:textStyle="bold"
                android:textSize="24dp"
                />
    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

    </RelativeLayout>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/icon_app"
            android:layout_gravity="center" android:layout_marginTop="30dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:minWidth="300dp"
            android:minHeight="100dp"
            android:layout_marginTop="10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <Button android:id="@+id/btAppstore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="برامج اخرى"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"/>
            <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="مشاركة البرنامج"
                    android:id="@+id/btShare"
                    android:background="@drawable/custom_button"
                    android:layout_marginBottom="3dp"
                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
            <Button android:id="@+id/btInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="عن البرنامج"
                    android:background="@drawable/custom_button"
                    android:layout_marginRight="3dp"/>
            <Button android:id="@+id/btEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="اتصال"
                    android:background="@drawable/custom_button"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>